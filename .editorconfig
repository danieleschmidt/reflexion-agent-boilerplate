# EditorConfig - consistent coding styles across editors
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{py,pyi}]
# Python files - 4 spaces (PEP 8)
max_line_length = 88

[*.{yml,yaml}]
# YAML files - 2 spaces for better readability
indent_size = 2