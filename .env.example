# Environment Configuration Template
# Copy to .env and customize for your environment

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# Application Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# LLM PROVIDERS
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=your_azure_endpoint_here
AZURE_OPENAI_API_KEY=your_azure_api_key_here
AZURE_OPENAI_API_VERSION=2024-02-01

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL (for production)
DATABASE_URL=postgresql://user:password@localhost:5432/reflexion_db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# SQLite (for development)
SQLITE_DATABASE_PATH=./data/reflexion.db

# =============================================================================
# REDIS CONFIGURATION (for caching)
# =============================================================================

REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=3600

# =============================================================================
# VECTOR DATABASE (for embeddings)
# =============================================================================

# Pinecone
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX=reflexion-memory

# Chroma (local vector store)
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION=reflexion_episodes

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Prometheus
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Jaeger Tracing
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
TRACING_ENABLED=true

# Lang-Observatory
LANG_OBSERVATORY_ENDPOINT=http://localhost:8080
LANG_OBSERVATORY_API_KEY=your_observatory_api_key
TELEMETRY_EXPORT_INTERVAL=60

# =============================================================================
# SECURITY
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_EXPIRATION_HOURS=24

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# =============================================================================
# REFLEXION CONFIGURATION
# =============================================================================

# Default Reflexion Settings
DEFAULT_MAX_ITERATIONS=3
DEFAULT_REFLECTION_THRESHOLD=0.7
MEMORY_WINDOW_SIZE=50
EPISODIC_MEMORY_CAPACITY=1000

# Reflection Prompts
REFLECTION_PROMPT_TEMPLATE=software_engineering_v2
CUSTOM_PROMPT_PATH=./prompts/

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Experimental Features
ENABLE_HIERARCHICAL_REFLECTION=false
ENABLE_CROSS_AGENT_LEARNING=false
ENABLE_HUMAN_FEEDBACK=true
ENABLE_AUTO_IMPROVEMENT=true

# Framework Integration
ENABLE_AUTOGEN_ADAPTER=true
ENABLE_CREWAI_ADAPTER=true
ENABLE_LANGCHAIN_ADAPTER=true
ENABLE_CLAUDE_FLOW_ADAPTER=true

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Connection Pools
HTTP_POOL_CONNECTIONS=10
HTTP_POOL_MAXSIZE=10
HTTP_POOL_BLOCK=false

# Async Configuration
ASYNC_TIMEOUT=30
CONCURRENT_REQUESTS=5

# Memory Management
MAX_MEMORY_USAGE_MB=512
GARBAGE_COLLECTION_THRESHOLD=100

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Test Configuration
TEST_DATABASE_URL=sqlite:///./test_reflexion.db
TEST_REDIS_URL=redis://localhost:6379/1
TEST_PARALLEL_WORKERS=4

# Development Tools
AUTO_RELOAD=true
SHOW_SQL_QUERIES=false
DEBUG_MEMORY=false
PROFILING_ENABLED=false